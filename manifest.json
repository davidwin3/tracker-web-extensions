{
  "manifest_version": 3,
  "name": "Kinesis Event Tracker",
  "description": "Event Tracker for AWS Kinesis Streams",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["webRequest", "activeTab", "storage"],
  "host_permissions": ["*://*.amazonaws.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["contentStyle.css", "icon-128.png", "icon-32.png"],
      "matches": []
    }
  ]
}
